{% for node, details in ha_cluster.items() %}
! Config for {{ node }}
! /etc/keepalived/keepalived.conf
! Configuration File for keepalived
global_defs {
    enable_script_security
    router_id LVS_DEVEL
}
vrrp_script check_apiserver {
  script "/etc/keepalived/check_apiserver.sh"
  interval 3
  weight -2
  fall 10
  rise 2
}

vrrp_instance VI_1 {
    state {{ details.state }}
    interface {{ details.if_name }}
    virtual_router_id 151
    priority {{ details.priority }}
    authentication {
        auth_type PASS
        auth_pass Password
    }
    virtual_ipaddress {
        {{ details.vip }}/24
    }
    track_script {
        check_apiserver
    }
}

{% endfor %}