{% for node in keepalived %}
! /etc/keepalived/keepalived.conf
! Configuration File for keepalived
global_defs {
    enable_script_security
    router_id LVS_DEVEL
}
vrrp_script check_apiserver {
  script "/etc/keepalived/check_apiserver.sh"
  interval 3
  weight -2
  fall 10
  rise 2
}

vrrp_instance {{ node.name }} {
    state {{ node.state }}
    interface {{ node.if_name }}
    virtual_router_id 151
    priority {{ node.priority }}
    authentication {
        auth_type PASS
        auth_pass Password
    }
    virtual_ipaddress {
        {{ node.vip }}/24
    }
    track_script {
        check_apiserver
    }
}

{% endfor %}