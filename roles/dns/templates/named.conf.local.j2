{% for zone in zones %}

zone "{{ zone.name }}" IN {
        type master;
        file "/etc/bind/forward.{{ zone.name }}";
        allow-update { none; };
};
zone "{{ zone.ptr }}.in-addr.arpa" IN {
        type master;
        file "/etc/bind/reverse.{{ zone.name }}";
        allow-update { none; };
};
{% endfor %}