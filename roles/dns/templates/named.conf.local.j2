{% for forward in forward_zones %}

zone "{{ forward.name }}" IN {
        type master;
        file "/etc/bind/forward.{{ forward.name }}";
        allow-update { none; };
};
{% endfor %}

{% for reverse in reverse_zones %}
zone "{{ reverse.ptr }}.in-addr.arpa" IN {
        type master;
        file "/etc/bind/reverse.{{ reverse.name }}";
        allow-update { none; };
};
{% endfor %}